<% layout('../layout/main') -%>

<main>
    <header class="row tm-welcome-section">
        <h2 class="col-12 text-center tm-section-title">Menu</h2>
    </header>

    <div class="tm-container-inner-2 tm-contact-section">
        <div class="row">
            <div class="col-md-6">
                <form action="<%= process.env.SITE_URL %>/menu" method="POST" class="tm-contact-form" enctype="multipart/form-data">
                    <% if(typeof db_error !== 'undefined'){ %>
                    <div style="color:red">
                        <%= db_error %>
                    </div>
                    <% } %>
                    <% if(typeof error !== 'undefined'){
                    if(error.length > 0){
                    error.forEach((el)=>{ %>

                    <div style="color:red">
                        <%= el %>
                    </div>

                    <% })}} %>

                    <div class="form-group">
                        <input
                                <% if(typeof name !== 'undefined'){ %>
                                value='<%= name %>'
                                <% } %>
                                type="text" name="name" class="form-control" placeholder="Name" required/>
                    </div>

                    <div class="form-group">
                        <input
                                <% if(typeof short_description !== 'undefined'){ %>
                                value='<%= short_description %>'
                                <% } %>
                                type="text" name="short_description" class="form-control"
                                placeholder="Short description" required/>
                    </div>

                    <div class="form-group">
                        <textarea rows="5" name="description" class="form-control" placeholder="Description" required>
                            <% if(typeof description !== 'undefined'){ %>
                            <%= description %>
                            <% } %>
                        </textarea>
                    </div>

                    <div class="form-group">
                        <input
                                <% if(typeof price != 'undefined'){ %>
                                value='<%= price %>'
                                <% } %>
                                type="number"
                                name="price"
                                class="form-control"
                                required
                                placeholder="Price"
                        />
                    </div>
                    <div class="form-group">
                        <input type="file" id="avatar" name="avatar">
                    </div>

                    <div class="form-group tm-d-flex">
                        <button type="submit" class="tm-btn tm-btn-success tm-btn-right">
                            Send
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>